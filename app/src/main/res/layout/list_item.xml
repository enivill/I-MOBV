<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<data>
    <variable
        name="business"
        type="sk.mobv.androidprojectschool.domain.Business" />
    <variable
        name="businessEventListener"
        type="sk.mobv.androidprojectschool.ui.BusinessEventListener" />

</data>

<RelativeLayout
    android:id="@+id/business_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:onClick="@{() -> businessEventListener.onClick(business.ownerName, business.id)}"
    android:minHeight="64dp">

    <ImageView
        android:id="@+id/business_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        app:businessType="@{business.type}"
        tools:src="@drawable/ic_pub"
        android:contentDescription="@{business.type}" />

    <TextView
        android:id="@+id/business_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingHorizontal="16dp"
        android:maxLines="1"
        android:layout_toEndOf="@id/business_type_icon"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/mtrl_list_item_tint"
        android:text="@{business.name ?? @string/business_without_name}"
        tools:text="@tools:sample/lorem"/>

    <TextView
        android:id="@+id/business_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/business_title"
        android:layout_gravity="center_vertical"
        android:paddingBottom="16dp"
        android:paddingHorizontal="16dp"
        android:maxLines="2"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/mtrl_list_item_tint"
        android:text="@{business.ownerName ?? @string/business_without_owner}"
        tools:text="@tools:sample/lorem/random"/>

</RelativeLayout>
</layout>
